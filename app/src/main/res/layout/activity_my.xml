<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.experience.MyActivity">

    <Button android:text="调用拍照" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt"/>
    <Button android:text="调用浏览器" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_brower"
        android:layout_below="@id/bt"/>
    <Button android:text="调用测试taskAffinity/intent" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_brower2"
        android:layout_below="@id/bt_brower"/>
    <Button
        android:text="调用普通service"
        android:id="@+id/service_common"
        android:layout_below="@id/bt_brower2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="调用绑定service"
        android:id="@+id/service_bind"
        android:layout_below="@id/service_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="解除绑定service"
        android:id="@+id/service_unbind"
        android:layout_below="@id/service_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="调用intentService"
        android:id="@+id/service_intent"
        android:layout_below="@id/service_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="发送广播"
        android:id="@+id/send"
        android:layout_below="@id/service_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="内容提供者"
        android:id="@+id/provider"
        android:layout_below="@id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>


